
    <%- include('../partials/header')%>
    <%- include('../partials/nav')%>
    <h1>Flight List</h1>
    <table class="ui very basic table" id="flights-table">
        <thead>
            <tr>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight Number</th>
                <th>Departs</th>
                <th>Destination</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(function(flight){ %>
                <tr>
                    <td><%= flight.airline %></td>
                    <td><%= flight.airport %></td>
                    <td><%= flight.flightNo %></td>
                    <td><%= flight.departs %></td>
                    <td><a href="/flights/<%= flight._id%>">Details</a></td>
                    <td><form action="/flights/<%= flight._id %>?_method=DELETE" method="POST">
                        <button class="ui button" >Delete</button>
                    </form></td>
                </tr>
            <% }); %> 
        </tbody>
    </table>
  </body>
</html>